@model QACareManagement.Pages.ProductManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<p class="text-muted">  Thông tin sản phẩm</p>

<h4> @Html.DisplayFor(model => model.Product.Name)</h4>
<div>
    <a asp-page="./Index">Quay về Quản lý</a>
</div>

<hr />
