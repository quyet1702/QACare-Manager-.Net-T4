@page
@model QACareManagement.Pages.PromotionManager.ProductList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<p>
    Chương trình tích điểm : @Model.PromotionGiftProduct.PromotionGift.Title <br />
    Sản phẩm : @Model.PromotionGiftProduct.Product.Name <br />

</p>

<h4>Cập nhật sản phẩm kèm theo </h4>
<div>
    <a asp-page="../Edit" asp-route-Id="@Model.PromotionGiftProduct.PromotionGiftId">Quay về</a>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PromotionGiftProduct.ProductId" />
            <input type="hidden" asp-for="PromotionGiftProduct.PromotionGiftId" />
            <input type="hidden" asp-for="PromotionGiftProduct.Id" />
            <div class="form-group">
                <label asp-for="PromotionGiftProduct.Quantity" class="control-label"></label>
                <input asp-for="PromotionGiftProduct.Quantity" class="form-control" />
                <span asp-validation-for="PromotionGiftProduct.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromotionGiftProduct.Price" class="control-label"></label>
                <input asp-for="PromotionGiftProduct.Price" class="form-control" />
                <span asp-validation-for="PromotionGiftProduct.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="">
    <a asp-page="../Edit" asp-route-Id="@Model.PromotionGiftProduct.PromotionGiftId">Quay về</a>
    <a asp-page="./Delete" asp-route-Id="@Model.PromotionGiftProduct.Id" class="float-right text-danger"> <i class=""></i>  Xóa Bỏ  </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
